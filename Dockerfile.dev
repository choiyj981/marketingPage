FROM node:18-alpine

WORKDIR /app

# 패키지 파일 복사
COPY package*.json ./

# 의존성 설치
RUN npm ci

# 기본 소스 코드 복사 (볼륨 마운트가 실패해도 작동하도록)
# 볼륨 마운트 시 이 파일들이 덮어씌워집니다
COPY server ./server
COPY client ./client
COPY shared ./shared
COPY public ./public
COPY blog-posts ./blog-posts  # 마크다운 파일 폴더
COPY vite.config.ts ./
COPY tsconfig.json ./
COPY tailwind.config.ts ./
COPY postcss.config.js ./
COPY drizzle.config.ts ./
COPY components.json ./

# 포트 노출
EXPOSE 5000

# 환경 변수 설정
ENV NODE_ENV=development
ENV PORT=5000

# 개발 서버 시작 (핫 리로드 지원)
CMD ["npm", "run", "dev"]

